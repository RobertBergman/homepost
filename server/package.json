{
  "name": "homepost-server",
  "version": "1.0.0",
  "description": "Central server for Home Monitoring System",
  "main": "server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon server.js",
    "build": "babel server.js app.js routes services -d dist",
    "postinstall": "npm run build",
    "test": "jest \"tests/(simple|utils|database)\\.test\\.js\"",
    "test:all": "jest",
    "test:watch": "jest --watch \"tests/(simple|utils|database)\\.test\\.js\"",
    "test:coverage": "jest --coverage \"tests/(simple|utils|database)\\.test\\.js\"",
    "build-ui": "cd gui && npm install && npm run build"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.2.5",
    "@babel/runtime": "^7.26.10",
    "@langchain/openai": "^0.4.4",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "langchain": "^0.3.19",
    "multer": "^1.4.5-lts.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.10",
    "@babel/plugin-transform-nullish-coalescing-operator": "^7.26.6",
    "@babel/plugin-transform-optional-chaining": "^7.25.9",
    "@babel/preset-env": "^7.26.9",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/fixtures/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/gui/"
    ]
  },
  "author": "",
  "license": "MIT"
}
